<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/card_layout"
        android:layout_margin="20dp"
        android:padding="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/default_user"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img_user_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_driver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Myles Bolger"
                android:textSize="14sp"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/color_white"
                android:singleLine="true"
                android:drawableLeft="@mipmap/user"
                android:drawablePadding="4dp"
                />
            <TextView
                android:id="@+id/txt_visit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="14sp"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/color_white"
                android:singleLine="true"
                android:drawableLeft="@mipmap/handshake"
                android:drawablePadding="4dp"/>
            <TextView
                android:id="@+id/txt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/color_white"
                android:singleLine="true"
                android:drawableLeft="@mipmap/map_location"
                android:drawablePadding="4dp"/>
        </LinearLayout>


    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#616060"/>
</LinearLayout>